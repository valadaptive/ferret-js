{
    "parserOptions": {
        "ecmaVersion": 2021
    },

    "env": {
        "es2021": true,
        "node": true
    },

    "extends": "eslint:recommended",

    "rules": {
        "indent": ["error", 4],
        "quotes": ["error", "single"],
        "semi": ["error", "always"],
        "no-unused-vars": ["error", {"argsIgnorePattern": "^_"}]
    }
}
